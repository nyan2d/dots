[bar/first]
font-0 = JetBrainsMono Nerd Font:pixelsize=14;3:antialias=true:hinting=true
width = 100%
height = 26
background = BF000000
fixed-center = true
modules-left = hostname i3
modules-right = layout volume charge backlight ram cpu lan date
tray-position = right
tray-padding = 1

[bar/second]
font-0 = JetBrainsMono Nerd Font:pixelsize=14;3:antialias=true:hinting=true
monitor = DVI-D-1
width = 100%
height = 26
background = BF000000
fixed-center = true
modules-left = hostname i3
modules-right = date

[colors]
blueback = #bbadff

[module/hostname]
type = custom/script
exec = uname -n
interval = 300.0
format = "ïŒƒ  <label>"
format-padding = 4

[module/i3]
type = internal/i3
pin-workspaces = true
index-sort = true
label-focused = %index%
label-focused-background = #FFFFFFFF
label-focused-foreground = #FF000000
label-focused-padding = 2
label-unfocused = %index%
label-unfocused-padding = 2
label-urgent = %index%
label-urgent-background = #ff0000
label-urgent-padding = 2
label-visible = "%index%"
label-visible-padding = 2
label-visible-background = #FFCCCCCC
label-visible-foreground = #FF000000

[module/layout]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock
blacklist-2 = caps lock
label-layout = %icon%
layout-icon-0 = us;EN
layout-icon-1 = ru;RU
format = <label-layout>
format-prefix = "lang: "
format-prefix-foreground = ${colors.blueback}
format-padding = 1

[module/volume]
type = internal/pulseaudio
format-volume-prefix = "volume: "
format-volume-prefix-foreground = ${colors.blueback}
format-padding = 1

[module/charge]
type = internal/battery
battery = BAT0
adapter = ACAD
format-charging-prefix = "battery: "
format-discharging-prefix = "battery: "
format-charging-prefix-foreground = ${colors.blueback}
format-discharging-prefix-foreground = ${colors.blueback}
format-charging-padding = 1
format-discharging-padding = 1

[module/backlight]
type = internal/backlight
card = intel_backlight
enable-scroll = true
format-prefix = "backlight: "
format-prefix-foreground = ${colors.blueback}

[module/ram]
type = internal/memory
interval = 3
format-prefix = "RAM: "
format-prefix-foreground = ${colors.blueback}
format-padding = 1

[module/cpu]
type = internal/cpu
format-prefix = "CPU: "
format-prefix-foreground = ${colors.blueback}
format-padding = 1

